<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet")
        link(href="https://fonts.googleapis.com/css?family=Exo+2:500&display=swap" rel="stylesheet")
        link(rel="stylesheet", href="css/reset.css")
        link(rel="stylesheet", href="css/sidebar.css")
        link(rel="stylesheet", href="css/header.css")
        link(rel="stylesheet", href="css/main.css")
        link(rel="stylesheet", href="css/content.css")
        link(rel="stylesheet", href="css/mixins.css")
        title Document
    body
        include sidebar
        main
            include header.pug
            .content
                .window
                    .senders
                        - 
                            const senders = [
                                {"online": true, "active": false, "avatar": "../img/MH@2.png", "name": "Miranda Hops", "mute": true, "time": "9:32", "message": "Excepteur sint occaecatar..."},
                                {"online": false, "active": false, "avatar": "../img/BC@2.png", "name": "Barry Callebaut", "mute": false, "time": "22:01", "message": "Nemo enim ipsam volupta..."},
                                {"online": true, "active": true, "avatar": "../img/SD1@2.png", "name": "Stacey Dosh", "mute": false, "time": "19:15", "message": "Ut enim ad minima veniam..."},
                                {"online": false, "active": false, "avatar": "../img/MK@2.png", "name": "Michael Kors", "mute": false, "time": "13:49", "message": "To take a trivial example..."},
                                {"online": true, "active": false, "avatar": "../img/JS@2.png", "name": "Johny Cash", "mute": false, "time": "10:25", "message": "Great explorer of the truth..."},
                                {"online": false, "active": false, "avatar": "../img/SD@2.png", "name": "Stacey Dosh", "mute": false, "time": "08:53", "message": "Ut enim ad minima veniam..."}
                            ]
                        each sender in senders 
                            if sender.active 
                                section.senders__sender.sender.senders__sender--online.sender--active
                                    img.sender__avatar(src=sender.avatar, alt="")
                                    span.sender__name.sender__name--online
                                        = sender.name
                                    time.sender__time
                                        = sender.time
                                    span.sender__message
                                        =sender.message
                            else if sender.online 
                                section.senders__sender.senders__sender--online.sender
                                    img.sender__avatar(src=sender.avatar, alt="")
                                    span.sender__name.sender__name--online
                                        = sender.name
                                    if sender.mute == true
                                        img.sender__mute(src='../img/Group.svg' alt='')
                                    time.sender__time
                                        = sender.time
                                    span.sender__message
                                        =sender.message
                            else if sender.online == false
                                section.senders__sender.sender 
                                    img.sender__avatar(src=sender.avatar, alt="")
                                    span.sender__name
                                        = sender.name
                                    time.sender__time
                                        = sender.time
                                    span.sender__message
                                        =sender.message
                    .messages
                        .messages__search.search
                            img.search__image(src='../img/Shape-1.svg' alt='')
                            input.search__find(type='text' placeholder='Search message...')
                        .messages__mails
                            .mails
                                include mixins
                                - 
                                    const mails = [
                                        {"check": "inbox", "img": "../img/SD1@2.png", "text": "On the other hand, we denounce with righteous indignation!", "time": "01:14"},
                                        {"check": "outbox", "text": "Which is the same as saying?", "time": "01:38"}, 
                                        {"check": "inbox", "img": "../img/SD1@2.png", "text": "But in certain circumstances and owing to the claims of duty or the obligations of business it will frequently occur that pleasures", "time": "01:14"}, 
                                        {"check": "outbox", "text": "To take a trivial example, which of us ever undertakes)", "time": "01:38"},
                                        {"check": "inbox", "img": "../img/SD1@2.png", "text": "But in certain circumstances and owing to the claims of duty or the obligations of business it will frequently occur that pleasures", "time": "01:14"},
                                        {"check": "outbox", "text": "To take a trivial example, which of us ever undertakes)", "time": "01:38"},
                                        {"check": "inbox", "img": "../img/SD1@2.png", "text": "But in certain circumstances and owing to the claims of duty or the obligations of business it will frequently occur that pleasures", "time": "01:14"},
                                        {"check": "outbox", "text": "To take a trivial example, which of us ever undertakes)", "time": "01:38"}
                                    ]
                                each mail in mails
                                    if mail.check == "inbox"
                                        +inbox(mail.img, mail.text, mail.time)
                                    else if mail.check == "outbox"
                                        +outbox(mail.text, mail.time)
                        .messages__input.send
                            input.send__type(type='text' placeholder='Write a message...')
                            a.send__icon(href='#')
                                img(src='../img/Shape-2.svg' alt='')
                            a.send__icon(href='#')
                                img(src='../img/clip.svg' alt='')
                            a.send__icon.send__icon--active(href='#')
                                img(src='../img/send-message-button.svg' alt='')
        script(src='../js/mobileMenu.js')